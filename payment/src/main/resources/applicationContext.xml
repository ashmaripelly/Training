<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="creditCardPayment" class="com.example.payments.CreditCardPayment">
        <property name="gateway" value="Stripe"/>
    </bean>

    <bean id="paypalPayment" class="com.example.payments.PaypalPayment"/>

    <!-- Wire the desired one here by changing the ref -->
    <bean id="paymentProcessor" class="com.example.payments.PaymentProcessor"
          init-method="init" destroy-method="destroy">
        <!-- flip between creditCardPayment and paypalPayment -->
        <property name="paymentMethod" ref="creditCardPayment"/>
    </bean>
</beans>